@page "/edit/{Id:int}"
@rendermode InteractiveServer
@using System.ComponentModel.DataAnnotations
@using Application.Interfaces
@using Core.Models
@inject ITaskManagementPort Port
@inject NavigationManager NavManager
<h3>Edit</h3>
<div>
    <div>
        <label>Description:</label>
        <input type="text" @bind="@taskEntity.Name" />
    </div>
    <div>
        <input type="checkbox" @bind="@taskEntity.IsCompleted" />
        <label>Completed</label>
    </div>
    <button @onclick="SubmitForm">Save</button>
</div>
@code {
    [Parameter] public int Id { get; set; }
    private TaskModel taskEntity = new TaskModel();
    protected override Task OnInitializedAsync()
    {
        taskEntity = Port.GetAllTasks().FirstOrDefault(e => e.Id == Id);
        return base.OnInitializedAsync();
    }
    private void SubmitForm()
    {
        var existingEntity = Port.GetAllTasks().FirstOrDefault(e => e.Id == Id);
        if (existingEntity is not null)
        {
            var index = Port.GetAllTasks().ToList().IndexOf(existingEntity);
            Port.UpdateTask(taskEntity);
            NavManager.NavigateTo("/");
        }
    }
}
